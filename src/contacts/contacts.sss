.contacts
  font-size: 40px

  @media (width > 980px)
    display: flex
    justify-content: space-between

.contacts_notes
  display: flex
  font-size: 20px
  margin-top: 2px

  @media (width > 980px)
    justify-content: space-between

  @media (width <= 980px)
    & > *
      margin-right: 15px

.contacts_notes.is-right
  @media (width > 980px)
    justify-content: flex-end

.contacts_contact
  @media (width <= 980px)
    padding-top: 30px
