.contacts
  font-size: 40px
  line-height: 1

  @media (width > 980px)
    display: flex
    justify-content: space-between

.contacts_notes
  padding-top: 7px
  display: flex
  font-size: 20px

  @media (width > 980px)
    justify-content: space-between

  @media (width <= 980px)
    & > *
      margin-right: 15px

.contacts_notes.is-right
  @media (width > 980px)
    justify-content: flex-end

.contacts_contact
  @media (width <= 980px)
    padding-top: 30px
