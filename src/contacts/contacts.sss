.contacts
  font-size: 40px

  @media (width > 980px)
    display: flex
    justify-content: space-between

.contacts_notes
  padding-top: 5px
  display: flex
  font-size: 20px

  @media (width > 980px)
    justify-content: space-between

  @media (width <= 980px)
    & > *
      margin-left: 15px

    & > :first-child
      margin-left: 0

.contacts_notes.is-right
  @media (width > 980px)
    justify-content: flex-end

.contacts_contact
  @media (width <= 980px)
    padding-top: 40px
