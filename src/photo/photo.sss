.photo
  display: block
  top: 17px
  left: 17px
  line-height: 1
  width: 150px
  height: 150px
  border-radius: 50%
  box-shadow: 0 0 0 0 rgba(24, 124, 255, 0.2)
  transition: box-shadow 200ms
  z-index: 2
  background: #e9e9e9

  &:hover
    box-shadow: 0 0 0 7px rgba(24, 124, 255, 0.2)

  &:focus
    box-shadow: 0 0 0 7px rgb(24, 124, 255)

  @media (width > 980px)
    position: absolute

.photo_image
  width: 100%
  height: 100%
  border-radius: 50%
