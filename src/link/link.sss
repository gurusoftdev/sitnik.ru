.link
  display: inline-block
  position: relative
  text-decoration: none
  color: rgb(1, 81, 186)

.link::before
  content: ""
  position: absolute
  left: -0.2em
  right: -0.2em
  bottom: -0.05ex
  top: -0.05ex
  background: rgba(1, 81, 186, 0.3)
  transform: scaleY(0.05)
  transform-origin: 0 100% 0
  transition: transform 200ms

.link:hover::before
  transform: none
