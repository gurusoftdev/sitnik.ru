.link
  display: inline-block
  position: relative
  text-decoration: none
  color: rgb(24, 124, 255)

.link::before
  content: ""
  position: absolute
  left: -0.2em
  right: -0.2em
  bottom: 0
  top: 0
  border-radius: 0.3em
  background: rgba(24, 124, 255, 0.3)
  transform: scaleY(0.05)
  transform-origin: 0 100% 0
  transition: transform 200ms

.link:hover::before
  transform: none
