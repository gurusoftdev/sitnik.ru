.layout
  display: flex

  @media (width <= 980px)
    flex-direction: column

.layout_globe,
.layout_links
  position: relative
  padding: 15px 25px
  box-sizing: border-box

  @media (width > 980px)
    min-height: 100vh
    width: 50vw

.layout_language
  position: absolute
  bottom: 17px
  left: 20px
  font-size: 14px
  z-index: 1

.layout_title
  font-size: 40px
  text-align: right
  font-weight: normal
