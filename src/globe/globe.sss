.globe
  position: absolute
  top: 0
  left: 0
  width: 100%
  min-height: calc(100% - 80px)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 40px 0

.globe_loading
  width: calc(40vw - 200px)
  height: calc(40vw - 200px)
  background: linear-gradient(to bottom right, #f8f8f8, #ececec)
  border-radius: 50%
