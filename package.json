{
  "private": true,
  "homepage": "https://sitnik.ru/",
  "license": "MIT",
  "scripts": {
    "spell": "yaspeller *.md dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint & yarn build && size-limit && yarn spell",
    "clean": "del-cli dist/ .cache src/globe/location.json",
    "start": "parcel serve src/index.pug --open",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "del": "^5.1.0",
    "dotenv": "^8.2.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.26",
    "postcss-combine-media-query": "^1.0.0",
    "postcss-hexrgba": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-pxtorem": "^4.0.1",
    "posthtml": "^0.12.0",
    "pug": "^2.0.4",
    "rollup": "^1.29.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "ssdeploy": "^0.6.1",
    "strip-debug": "^4.0.0",
    "sugarss": "^2.0.0",
    "three": "^0.112.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.3",
    "@logux/sharec-config": "^0.5.6",
    "@logux/stylelint-config": "^0.1.2",
    "@size-limit/file": "^3.0.0",
    "chalk": "^3.0.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^15.0.1",
    "fast-xml-parser": "^3.16.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "stylelint": "^13.0.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.0.0",
    "yaspeller": "^6.0.2"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html",
          ".photo"
        ],
        "rootValue": 20
      },
      "autoprefixer": {}
    }
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "browser": {
    "node_modules/three/src/renderers/webvr/*": "./src/empty.js"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "global-require": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.sss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "name": "Critical",
      "path": "dist/en/index.html",
      "limit": "4 KB"
    },
    {
      "name": "Full",
      "path": [
        "dist/worker.*.js",
        "dist/map.*.webp",
        "dist/here.*.webp",
        "dist/photo.*.webp"
      ],
      "limit": "176 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "GPG",
      "72999A65",
      "WhatsApp",
      "WeChat",
      "NSFW",
      "GitHub",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "Instagram",
      "Linguopunk",
      "ru",
      "sitnik",
      "Телеграм",
      "ВКонтакте",
      "Твиттер",
      "Гитхаб",
      "Автопрефиксер",
      "Браузерслист",
      "фронтенд",
      "Инстаграм",
      "Лингвопанк",
      "Logux",
      "Логакс"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.6"
  }
}
