{
  "private": true,
  "homepage": "https://sitnik.ru/",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "spell": "yaspeller *.md dist/en/index.html dist/ru/index.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint & yarn build && size-limit && yarn spell",
    "clean": "rm -Rf dist/ src/globe/location.json",
    "start": "serve dist/",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "autoprefixer": "^10.3.1",
    "cssnano": "^5.0.8",
    "dotenv": "^10.0.0",
    "globby": "^12.0.1",
    "postcss": "^8.3.6",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-import": "^14.0.2",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.6",
    "postcss-pxtorem": "^6.0.0",
    "posthtml": "^0.16.5",
    "pug": "^3.0.2",
    "rollup": "^2.56.2",
    "rollup-plugin-terser": "^7.0.2",
    "ssdeploy": "^0.7.0",
    "strip-debug": "^6.0.0",
    "sugarss": "^4.0.1",
    "terser": "^5.7.1",
    "three": "^0.131.3"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.7",
    "@logux/sharec-config": "^0.11.0",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^5.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "fast-xml-parser": "^3.19.0",
    "lint-staged": "^11.1.2",
    "nanocolors": "^0.1.1",
    "prettier": "^2.3.2",
    "serve": "^12.0.0",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^5.0.3",
    "stylelint": "^13.13.1",
    "typescript": "^4.3.5",
    "yaspeller": "^7.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "browser": {
    "node_modules/three/src/renderers/webvr/*": "./src/empty.js"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "node/global-require": "off",
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "dist",
    ".cache",
    "**/errors.ts"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Critical",
      "path": "dist/en/index.html.gz",
      "gzip": false,
      "limit": "4 KB"
    },
    {
      "name": "Full",
      "path": [
        "dist/en/index.html.gz",
        "dist/worker.*.js.gz",
        "dist/map.*.webp",
        "dist/here.*.webp",
        "dist/photo.*.avif"
      ],
      "gzip": false,
      "limit": "190 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "GPG",
      "63BC",
      "24D9",
      "8C77",
      "F786",
      "WhatsApp",
      "WeChat",
      "NSFW",
      "GitHub",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "Instagram",
      "Linguopunk",
      "ru",
      "sitnik",
      "Телеграм",
      "ВКонтакте",
      "Твиттер",
      "Гитхаб",
      "Автопрефиксер",
      "Браузерслист",
      "фронтенд",
      "Инстаграм",
      "Лингвопанк",
      "Logux",
      "Логакс",
      "sitnikfriday",
      "Ситникфрайдей",
      "Castellano"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.11.0"
  }
}
