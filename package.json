{
  "private": true,
  "scripts": {
    "spell": "yaspeller dist/**/*.html",
    "lint": "eslint *.js src/**/*.js && stylelint src/**/*.sss",
    "test": "yarn lint & yarn build && yarn spell",
    "clean": "rimraf dist/",
    "start": "parcel serve src/index.pug --open",
    "build": "yarn clean && NODE_ENV=production ./build.js"
  },
  "dependencies": {
    "three": "^0.104.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html",
          ".photo"
        ],
        "rootValue": 20
      },
      "autoprefixer": {}
    }
  },
  "staticPath": "public",
  "engines": {
    "node": "^12.0.0"
  },
  "browser": {
    "node_modules/three/src/renderers/webvr/*": "./empty.js"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "security/detect-non-literal-regexp": "off",
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": null,
      "block-closing-brace-newline-before": null,
      "block-opening-brace-space-before": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.css": [
      "stylelint --fix",
      "git add"
    ],
    "*.svg": [
      "svgo",
      "git add"
    ]
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.2.1",
    "autoprefixer": "^9.5.1",
    "chalk": "^2.4.2",
    "css-mqpacker": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "fast-xml-parser": "^3.12.16",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-static-files-copy": "^2.1.1",
    "postcss": "^7.0.16",
    "postcss-hexrgba": "^1.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-pxtorem": "^4.0.1",
    "posthtml": "^0.11.4",
    "pug": "^2.0.3",
    "strip-debug": "^4.0.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recess-order": "^2.0.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "svgo": "^1.2.2",
    "yaspeller": "^5.1.0"
  },
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "GPG",
      "1F710E4D",
      "WhatsApp",
      "WeChat",
      "NSFW",
      "GitHub",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "Instagram",
      "Linguopunk",
      "ru",
      "sitnik",
      "Телеграм",
      "ВКонтакте",
      "Твиттер",
      "Гитхаб",
      "Автопрефиксер",
      "Браузерслист",
      "фронтенд",
      "Инстаграм",
      "Лингвопанк"
    ]
  }
}
