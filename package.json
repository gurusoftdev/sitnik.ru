{
  "private": true,
  "scripts": {
    "lint": "eslint *.js src/**/*.js && stylelint src/**/*.css",
    "test": "yarn lint",
    "clean": "rimraf dist/",
    "start": "parcel serve src/index.pug --open",
    "build": "yarn clean && NODE_ENV=production ./build.js"
  },
  "dependencies": {
    "three": "^0.100.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not ie_mob 11"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html"
        ],
        "rootValue": 20
      },
      "autoprefixer": {}
    }
  },
  "staticPath": "public",
  "engines": {
    "node": "^11.0.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "node/no-unpublished-require": "off"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@logux/eslint-config": "^27.0.0",
    "autoprefixer": "^9.4.5",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.1",
    "postcss-pxtorem": "^4.0.1",
    "posthtml": "^0.11.3",
    "pug": "^2.0.3",
    "stylelint": "^9.9.0",
    "stylelint-config-recess-order": "^2.0.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0"
  }
}
