!!! 5
%html{ lang: @lang }
  %head
    %meta( charset='UTF-8' )
    %title= @i18n.name
    %link( rel='icon' href='favicon.ico' type='image/x-icon' )
    
    %meta{ name: 'keywords', content: t.keywords }
    %meta{ name: 'description', content: t.description }
    
    %link( rel='openid.server' href='http://www.myopenid.com/server' )
    %link( rel='openid.delegate' href='http://iskin.myopenid.com/' )
    %link( rel='openid2.provider' href='http://www.myopenid.com/server' )
    %link( rel='openid2.local_id' href='http://iskin.myopenid.com' )
    
    %script( type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js' )
    :javascript
      if ('/' == location.pathname && 'ru' == navigator.language)
          location = location + 'index.ru.html'      
      jQuery(function($) {
          if ($.browser.msie) $('li p, dt').css('opacity', 0.6)
          
          $('li a, dd').hover(function(e) {
              var label = $(this).prev()
              if ($.browser.webkit || $.browser.opera) {
                  label.css('opacity', ('mouseenter' == e.type ? 1 : 0.6))
              } else {
                  label.animate({ opacity: ('mouseenter' == e.type ? 1 : 0.6) })
              }
          })
          
          $('#photo').click(function() {
              var link = $(this)
              var real = link.find('.real')
              if (real.length) {
                  real.animate({ width: '350px', marginTop: '-48px' }).
                       fadeOut(function() { $(this).remove() })
                  var hide = 1
              } else {
                  var left = link.position().left
                  if (left > 78) left = '78'
                  $('<img src="' + link.attr('href') + '" class="real" />').
                      prependTo(link).css({
                          width: '350px', margin: '-48px 0 0 -' + left + 'px'
                      }).fadeIn().animate({
                          width: '600px', marginTop: '-120px'
                      })
                  var hide = 0
              }
              $('h1, dl, ul, #translate').animate({ opacity: hide }, 800)
              return false
          })
      })
    
    %style( type='text/css' )
      :sass
        @import compass/css3
        
        !line_height= 130%
        
        @font-face
          font-family: 'Cuprum'
          src: url(Cuprum.eot)
          src: local(Cuprum), url(Cuprum.otf) format('opentype')
        
        *
          margin: 0
          padding: 0
        html
          background: #333
          font: 16px Cuprum, Helvetica, sans-serif
          color: white
          line-height= !line_height
        body
          padding: 0.5em
        #root
          margin: 3.5em auto 0 auto
          width: 49em
          max-width: 100%
        a
          color: #44b0ba
          text-decoration: none
        a:hover
          text-decoration: underline
        h1
          font-size: #{'en' == @lang ? '280%' : '260%'}
          font-weight: normal
          line-height= !line_height
          margin-bottom:  #{'en' == @lang ? '0.25em' : '0.37em'}
          text-shadow: 2px 2px 5px black
        #photo
          display: block
          float: left
          margin: 0 2em 1.5em 0
          .thumb
            border: none
            +box-shadow(1px, 1px, 3px, #111)
            &:hover
              +box-shadow(2px, 2px, 4px, #151515)
          .real
            border: none
            +box-shadow(2px, 2px, 4px, #151515)
            position: absolute
            z-index: 10
            max-width: 100%
        dl
          float: left
          margin: 0 3em 1.5em 0
          margin-top: 0.1em
          max-width: 100%
        dd
          color: #999
        dd, li a
          display: inline-block
          margin-bottom: 0.55em
          text-shadow: 1px 1px 2px black
          font-size: 140%
          line-height= !line_height
        dt, li p
          opacity: 0.6
          -webkit-transition: opacity 400ms linear
        ul
          width: 18em
          max-width: 100%
          float: left
          li
            float: left
            list-style: none
            margin-right: 1.5em
            width: 6.8em
        #translate
          position: absolute
          top: 0.5em
          right: 1em
          color: #44b0ba
        @media handheld, screen and (max-device-width: 321px)
          #root
            margin-top: 1.5em !important
          h1
            font-size: #{'en' == @lang ? '210%' : '180%'}
            margin-bottom: #{'en' == @lang ? '0.5em' : '0.7em'}
          #translate
            left: 0.5em
  %body
    #root
      %h1= t.name
      %a#photo( href='photo.jpg' )
        %img.thumb{ src: 'photo.small.jpg', style: 'width: 200px; height: 267px;', alt: t.photo }
      %dl
        %dt= t.contacts.address
        %dd
          %a( href='mailto:andrey@sitnik.ru' ) andrey@sitnik.ru
        %dt= t.contacts.phone
        %dd
          %a( href='tel:+79117696571' ) +7 911 769 65 71
        %dt= t.contacts.location
        %dd
          %a.locality{ href: t.locality.href }>= t.locality.name
          - if t.country
            ,
            %div
              %a{ href: @i18n.country.href }= t.country.name
          - elsif t.locality.other
            ,
            %div= t.locality.other
        %dt= t.contacts.key
        %dd
          %a( href='http://sitnik.ru/1F710E4D.asc' ) 1F710E4D
      %ul
        %li
          %p= t.links.github.desc
          %a( href='http://github.com/ai' )= t.links.github.name
        %li
          %p= t.links.twitter.desc
          %a( href='http://twitter.com/andrey_sitnik' )= t.links.twitter.name
        %li
          %p= t.links.wikipedia.desc
          %a( href='http://ru.wikipedia.org/wiki/User:A.I.' )= t.links.wikipedia.name
        %li
          %p= t.links.habrahabr.desc
          %a( href='http://iskin.habrahabr.ru/blog/' )= t.links.habrahabr.name
        %li
          %p= t.links.slideshare.desc
          %a( href='http://www.slideshare.net/iskin' )= t.links.slideshare.name
        %li
          %p= t.links.vkontakte.desc
          %a( href='http://vkontakte.ru/iskin' )= t.links.vkontakte.name
    #translate
      = t.translate.icon
      %a{ href: "index.#{t.translate.lang}.html", rel: 'alternate', lang: t.translate.lang }= t.translate.title
